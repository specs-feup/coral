{
    "name": "@specs-feup/coral",
    "version": "1.1.0",
    "description": "A Rust-like Borrow Checker for C",
    "type": "module",
    "parserOptions": {
        "project": [
            "./*/tsconfig.json",
            "./tsconfig.*.json"
        ]
    },
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "lint": "eslint .",
        "format": "prettier --write .",
        "sandbox": "npx clava classic out/sandbox.js --config sandbox.xml",
        "sandbox:watch": "cross-env DEBUG=\"*\" npx clava classic out/sandbox.js --config sandbox.xml -w out -w in/sandbox",
        "benchmarks": "cross-env DEBUG=\"*\" npx clava classic out/benchmarks.js --config benchmarks.xml",
        "test": "cross-env DEBUG=\"*\" npx clava classic out/test.js --config test.xml"
    },
    "exports": {
        "./*": {
            "types": "./out/*.d.ts",
            "default": "./out/*.js"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/specs-feup/coral.git"
    },
    "keywords": [
        "clava",
        "rust",
        "c",
        "borrow checker",
        "static analysis"
    ],
    "author": "",
    "bugs": {
        "url": "https://github.com/specs-feup/coral/issues"
    },
    "homepage": "https://github.com/specs-feup/coral#readme",
    "dependencies": {
        "@specs-feup/clava": "~3.5.1",
        "@specs-feup/clava-flow": "^1.0.4",
        "@specs-feup/flow": "^1.0.3",
        "ansi-colors": "^4.1.3"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "cross-env": "^10.1.0",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-jest": "^27.4.2",
        "eslint-plugin-tsdoc": "^0.2.17",
        "prettier": "^3.2.5",
        "typescript": "^5.9.3",
        "@types/debug": "^4.1.12",
        "@types/java": "^0.9.6",
        "@types/node": "^20.14.10",
        "@types/yargs": "^17.0.33",
        "typescript-eslint": "^8.26.1",
        "node-notifier": "^10.0.1"
    }
}
